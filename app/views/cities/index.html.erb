<!-- app/views/cities/index.html.erb -->
<%= form_with url: cities_path, method: :get, local: true do %>
  <%= label_tag :state %>
  <%= text_field_tag :state %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Search' %>
<% end %>

<ul>
  <% @cities.each do |city| %>
    <li><%= city.name %></li>
  <% end %>
</ul>
